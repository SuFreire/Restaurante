@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Reservas";
}

<h1>Editar reserva</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservaID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataReserva" class="control-label"></label>
                <input asp-for="DataReserva" class="form-control" />
                <span asp-validation-for="DataReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraReserva" class="control-label"></label>
                <input asp-for="HoraReserva" class="form-control" />
                <span asp-validation-for="HoraReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NºdePessoas" class="control-label"></label>
                <input asp-for="NºdePessoas" class="form-control" />
                <span asp-validation-for="NºdePessoas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistoID" class="control-label"></label>
                <select asp-for="RegistoID" class="form-control" asp-items="ViewBag.RegistoID"></select>
                <span asp-validation-for="RegistoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="~/Voltar_atras.png" width="40" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
