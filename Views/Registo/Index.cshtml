@model IEnumerable<Restaurante.Models.Registo>

@{
    ViewData["Title"] = "Registo";
}

<h1>Registo</h1>

<p>
    <a asp-action="Create">Criar Novo Registo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegistoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RegistoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.RegistoID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
